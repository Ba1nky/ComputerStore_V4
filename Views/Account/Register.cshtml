@model RegisterModel

<h5 class="bg-primary text-white text-center p-2">Sign Up</h5>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>User Name</label>
        <input asp-for="@Model.UserName" name="UserName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="@Model.Email" name="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="@Model.Password" name="Password" class="form-control"/>
    </div>
    <div class="form-group">
        <label>ConfirmPassword</label>
        <input asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="py-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>